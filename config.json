{
	"mongo":
	{
		"address": "127.0.0.1",
		"port": 27017,
		"database": "foodlisting"
	},
	"http":
	{
		"debug": true,
		"bindaddress": "127.0.0.1",
		"port": 8080,
		"handlers":
		[
			{ "name": "RedirectHandler", "regex": "/" },
			{ "name": "LoginHandler", "regex": "/login" },
			{ "name": "DashboardHandler", "regex": "/dashboard(/\\w+)?", "ops": "dict(db=self.db)" },
			{ "name": "PublicHandler", "regex": "/" }
		]
	},
	"logLevel": "debug"
}